{
	"compilerOptions": {
		"outDir": "dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"noImplicitAny": true,
		"declaration": true
	},
	"exclude": [
		"node_modules",
		"typings/main",
		"typings/main.d.ts",
		"dist"
	],
	"compileOnSave": false
}